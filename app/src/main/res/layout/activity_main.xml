<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatchMatch.Vertical">
    <include
        android:id="@+id/in_title"
        layout="@layout/titlebar_white"
        />
    <RelativeLayout
        android:layout_below="@+id/in_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:id="@+id/re_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/main_top_bg"
            >
        </RelativeLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/card_bg"
            android:layout_alignTop="@+id/re_tie"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <RelativeLayout
            android:id="@+id/re_tie"
            android:layout_width="wrap_content"
            android:layout_height="145dp"
            android:layout_marginTop="@dimen/margin_20"
            android:gravity="center_vertical"
            >
            <ImageView
                android:id="@+id/img_tie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/tie_bg"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                />
            <TextView
                style="@style/text_16_white_ffffff"
                android:text="提额"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                />
        </RelativeLayout>


        <LinearLayout
            android:id="@+id/lin_top_money"
            style="@style/WrapWrap.Horizontal"
            android:layout_marginLeft="@dimen/margin_58"
            android:layout_marginTop="@dimen/margin_40"
            >
            <TextView
                style="@style/text_24_white_ffffff"
                android:text="¥"
                />
            <TextView
                android:id="@+id/tv_money"
                style="@style/text_35_white_ffffff"
                android:text="2300"/>
            <TextView
                style="@style/text_13_white_ffffff"
                android:layout_marginLeft="@dimen/margin_7"
                android:text="@string/available"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lin_card"
            style="@style/WrapWrap.Horizontal"
            android:gravity="center_vertical"
            android:layout_below="@+id/lin_top_money"
            android:layout_marginLeft="@dimen/margin_58"
            android:layout_marginTop="@dimen/margin_15">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/people_img"/>
            <TextView
               style="@style/text_13_white_ffffff"
                android:text="@string/card_pople"
                />
            <TextView
                android:id="@+id/tv_card_name"
                style="@style/text_16_white_ffffff"
                android:layout_marginLeft="@dimen/margin_5"
                android:text="姓名"
                />
        </LinearLayout>
        <LinearLayout
            style="@style/WrapWrap.Horizontal"
            android:layout_below="@+id/lin_card"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_58"
            android:layout_marginTop="@dimen/margin_7">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/card_type"/>
            <TextView
                style="@style/text_13_white_ffffff"
                android:text="@string/card_type"
                />
            <TextView
                android:id="@+id/tv_card_type"
                style="@style/text_16_white_ffffff"
                android:layout_marginLeft="@dimen/margin_5"
                android:text="普通"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lin_borrow"
            style="@style/MatchMatch.Vertical"
            android:background="@color/white_ffffff"
            android:layout_below="@+id/re_top"
            android:visibility="visible"
            >
            <include
                android:id="@+id/in_title"
                layout="@layout/include_home_borrow"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lin_borrow_success"
            style="@style/MatchMatch.Vertical"
            android:background="@color/white_ffffff"
            android:layout_below="@+id/re_top"
            android:visibility="gone"
            >
            <include
                android:id="@+id/in_title"
                layout="@layout/include_home_borrow_yi"
                />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>